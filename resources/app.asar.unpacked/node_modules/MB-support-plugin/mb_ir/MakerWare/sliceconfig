#!/usr/bin/env python3.4

import os
import runpy
import sys


# These are filled in by the build system
MB_EGG_RELPATH = "python"
MB_RESOURCE_RELPATH = "."

# We create absolute paths from paths relative to the bin directory
BIN_RELPATH = os.path.dirname(__file__)
def make_abs_path(relpath):
    return os.path.abspath(os.path.join(BIN_RELPATH, relpath))
MB_EGG_PATH = make_abs_path(MB_EGG_RELPATH)
MB_RESOURCE_PATH = make_abs_path(MB_RESOURCE_RELPATH)

# Add all needed packages to the path
sys.path.insert(0, os.path.join(MB_EGG_PATH, "slice_library-0.1.0-py2.7.egg"))

# This is how sliceconfig finds its resource files
os.environ['MB_RESOURCE_PATH'] = MB_RESOURCE_PATH

runpy.run_module('slice_library', run_name='__main__')


